                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </materialDesign:Card>
        </StackPanel>
    </Grid>-->


</Window>